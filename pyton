<?php // PHP script to send email if ($_SERVER["REQUEST_METHOD"] == "POST") { $name = $_POST['name']; $email = $_POST['email']; $message = $_POST['message']; $to = 'yaw.bempong35@gmail.com'; $subject = 'Message from Copyright Hub'; $body = "Name: $name\nEmail: $email\nMessage: $message"; if (mail($to, $subject, $body)) { echo '<script>alert("Message sent successfully!");</script>'; } else { echo '<script>alert("Error sending message!");</script>'; } } ?> <!DOCTYPE html> <html> <head> <title>Copyright Hub - Yaw and Ousmane's First Site</title> <meta charset="UTF-8"> <meta name="viewport" content="width=device-width, initial-scale=1.0"> <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> <style> body { font-family: Arial, sans-serif; margin: 20px; } header { background-color: #f0f0f0; padding: 20px; text-align: center; } footer { background-color: #f0f0f0; padding: 10px; text-align: center; clear: both; } .w3-container { margin-top: 20px; } .w3-input { width: 100%; padding: 10px;

       
